alias clear!='clear&&printf "\e[3J"'
alias ls='ls --group-directories-first --color=auto'
alias la='ls -AF'
alias ll='ls -lhAF'
alias lx='ls -XB'
alias cp='cp -ivdRp'
alias mv='mv -iv'
alias mkdir='mkdir -p'
alias sed='sed -r'
alias grep='grep -P --color=auto'
alias scp='rsync -azPe "ssh -q"'
alias rm='rm -i'
alias ln='ln -i'
alias type='type -a'
alias vimdiff='nvim -d'
alias bc='bc -lq'
alias units='units -1t'
alias octave='octave-cli -q'
alias julia='julia -q'
if [[ -z $BASH_VERSION ]]; then
  alias notmuch='noglob notmuch'
  alias find='noglob find'
fi

alias dc='cd'
alias sl='ls'

alias v='nvim'
alias vv='v input.txt'
alias vo='v output.txt'
alias vj='v *.job'
alias vi='gvim'
alias vm="v --cmd 'set rtp^=$HOME/.dotfiles/mail/notmuch-vim' +NotMuch"
alias xi='xcrysden --pwi'
alias xo='xcrysden --pwo'

alias vmd='vmd_preprocess'
alias mutt="export MTMPDIR=\$(mktemp -p $TMPDIR -d mutt.XXXXXXXXXX); mutt; rm -rf \$MTMPDIR"

alias hgrep="history 0|grep"
alias xgrep="xargs grep"
alias xsed="xargs sed"

for index in {1..20}; do
  alias "$index"="cd +${index}"
done
unset index
alias d='dirs -v'

# remote servers
# alias squeue="ras SQUEUE_FORMAT=\'%10A %3t %.2D:%2c  %16j %10L %12S %Z\' SLURM_TIME_FORMAT=\'%T %a\' squeue"
alias sbatch='ras sbatch'
alias scancel='ras scancel'
alias f='ras -t -i less +F'
alias fo='ras -t -i less +F output.txt'
alias ft='ras -i tail -n 2000 -f'
alias listen='coproc listen &>/dev/null'
alias state='ssh ofis cat ~/.dotfiles/tmp/mails.log'

state-clean() {
  if (( $# )); then
    ssh ofis "sed -i '/$1/d' ~/.dotfiles/tmp/mails.log"
  else
    ssh ofis 'cat /dev/null > ~/.dotfiles/tmp/mails.log'
  fi
}

q() {
  if (( $# )); then
    CURRENTSERVER=$1 squeue -u sselcuk
  else
    squeue -u sselcuk
  fi
}

